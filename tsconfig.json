{
  "compilerOptions": {
    "rootDir": ".",
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "moduleDetection": "force",
    "allowJs": true,

    /* Declarations 
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    */

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  
}
